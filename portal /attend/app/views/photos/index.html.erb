<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New Photo", new_photo_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>.
      <tr> 
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @photos.each do |photo| %>
         
         <tr>
            
            <td><%= link_to "Download Photo", photo.attachment_url %></td>
            <td><%= button_to "Delete",  photo, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete ?" %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>
